<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/AndroidWhite"
    android:layout_marginTop="20dp"
    tools:context=".One.FunnyFragment">

    <LinearLayout
        android:id="@+id/set_home_ready"
        style="@style/fun_line_layout"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="180dp"
            android:text="已发布作业"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mid_layout_selector"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true">
    <LinearLayout
        android:id="@+id/course_ask"
        style="@style/fun_line_layout_3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂提问"
            android:paddingRight="200dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <View
        style="@style/line_layout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
    </View>
    <LinearLayout
        android:id="@+id/in_course_homework"
        style="@style/fun_line_layout_3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂作业"
            android:textSize="16sp"
            android:paddingRight="200dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <View
        style="@style/line_layout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
    </View>
    <LinearLayout
        android:id="@+id/after_course_homework"
        style="@style/fun_line_layout_3"
        android:layout_marginTop="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="200dp"
            android:text="课下作业"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/collect_homework_info"
        style="@style/fun_line_layout"
        android:layout_marginTop="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="160dp"
            android:text="作业信息统计"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>