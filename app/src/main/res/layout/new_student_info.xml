<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AndroidWhite"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/stu_info_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        style="@style/single_layout"
        android:orientation="horizontal"
        android:background="@drawable/info_selector">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="21"
            android:background="@drawable/bf"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="79"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Update"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:text="ID号:wt17864154940"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stu_info_messsage"
        style="@style/fun_line_layout"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="180dp"
            android:text="消息通知"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mid_layout_selector"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:id="@+id/stu_info_mycourse"
            style="@style/fun_line_layout_3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_book_white_24dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的课程"
                android:paddingRight="200dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            style="@style/line_layout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
        </View>
        <LinearLayout
            android:id="@+id/stu_info_study_team"
            style="@style/fun_line_layout_3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_book_white_24dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习小组"
                android:textSize="16sp"
                android:paddingRight="200dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            style="@style/line_layout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
        </View>
        <LinearLayout
            android:id="@+id/stu_info_myhomework"
            style="@style/fun_line_layout_3"
            android:layout_marginTop="0dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_book_white_24dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="200dp"
                android:text="我的作业"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stu_info_set"
        style="@style/fun_line_layout"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_white_24dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="160dp"
            android:text="设置"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
