<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_diss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/AndroidWhite"
    tools:context=".One.DissFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/diss_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="讨论区"
            android:textSize="80sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/text_radius"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diss_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/diss_excellent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:text="Excellent"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:background="@drawable/text_radius"/>
        <TextView
            android:id="@+id/diss_doc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:text="Document"
            android:background="@drawable/text_radius_1"/>
    </LinearLayout>
</LinearLayout>