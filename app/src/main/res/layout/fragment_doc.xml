<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/AndroidWhite"
    tools:context=".Second.DocFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center|top">
        <TextView
            android:id="@+id/IT"
            style="@style/fm_doc_textview"
            android:text="计机" />
        <TextView
            android:id="@+id/Humanistic"
            style="@style/fm_doc_textview"
            android:text="人文" />
        <TextView
            android:id="@+id/Engineer"
            style="@style/fm_doc_textview"
            android:text="工程" />
        <TextView
            android:id="@+id/Natural"
            style="@style/fm_doc_textview"
            android:text="自然" />
        <TextView
            android:id="@+id/Medical"
            style="@style/fm_doc_textview"
            android:text="医药" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fm_doc_sort_fm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        android:paddingTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="名称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="上传者" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_weight="1"
            android:text="上传时间"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fm_doc_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>