<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stu_info_message_item_bk"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="5dp"
    android:paddingBottom="10dp"
    android:paddingRight="4dp"
    android:paddingTop="10dp"
    android:paddingLeft="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/stu_info_recycleview_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bf"/>
    <TextView
        android:id="@+id/stu_info_recycleview_item_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="中间件-鹿旭东老师" />
    <TextView
        android:id="@+id/stu_info_recycleview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        android:text="2018/05/13"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"/>
</LinearLayout>
