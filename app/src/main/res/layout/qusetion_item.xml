<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:onClick="onBlockItemClick"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/question_item_author_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@color/blue" />
        <TextView
            android:id="@+id/question_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:text="西北狼发出了问题"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/question_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray"
            android:text="1 天前"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/question_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如何实现圆形的ImageView控件"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/question_item_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray"
            android:ellipsize="end"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.5"
            android:text="西北狼：Android如何实现圆形的ImageView控件？在今天的开发中模仿知乎上牛客网的信息发表栏时，遇到圆形ImageView控件,在尝试使用coner设置圆角边距失败后，还没有好的解决方法，请大佬指点。"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_item_num_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="28 "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/question_item_num_diss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="4 "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="评论"/>
    </LinearLayout>
</LinearLayout>
